extends base.pug

block content 
    div.upload__container
        div.upload__video 
            video#preview
            button#actionBtn.social__btn Start Recording
        if errormessage 
            span=errormessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file", accept="video/*", required, id="video", name="video")
            label(for="thumb") Thumbnail File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(type="text", name="title", placeholder="Title", required, minLength = 1, maxlength= 100)
            input(type="text", name="description", placeholder="Description", required, )
            input(type="text", name="hashtags", placeholder="Hashtags seperated by comma.", required,minLength= 1,
            maxlength= 200,)
            input.uploadSubmit(type="submit", value="Upload Video")
block scripts 
    script(src="/static/js/recorder.js") 